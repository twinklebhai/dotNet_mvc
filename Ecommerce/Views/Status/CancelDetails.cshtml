@model Ecommerce.Models.FeedBack

@{
    ViewData["Title"] = "CancelDetails";
}

<h1>CancelDetails</h1>

<h4>FeedBack</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CancelDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FeedBackId" />
            <div class="form-group">


                <label asp-for="ItemId" class="control-label"></label>
                <input asp-for="ItemId" value="@ViewData["itemid"]" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Operation" class="control-label"></label>
                <input  asp-for="Operation" class="form-control" value="cancellation"/>
                <span asp-validation-for="Operation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
